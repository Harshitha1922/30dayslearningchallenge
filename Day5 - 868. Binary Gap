class Solution {
public:
    int binaryGap(int n) {
        int prev =-1;
        int maxi =0;
        int index =0;
        while(n>0)
        {
            if(n&1)
             {
                if(prev!=-1)
                {
                    maxi = max(maxi,index-prev);
                }
                prev = index;
                
             }
             n>>=1;
             index++;
        }
        return maxi;
    }
};
